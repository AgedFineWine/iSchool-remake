<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- layout is over here -->
    <title>Golisano College School of Information</title>
    <link rel="icon" type="image/x-icon" href="~/fav.jpg" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- loading the jquery ui css -->
    <link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    @*<link rel="stylesheet" href="~/p3.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="logo-container">
                        <img src="~/assets/logo_white.jpg" alt="rit logo" id="logo" />
                    </div>
                </a>
                @*<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@
                @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between right-nav">*@
                  <div class="right-nav">
                    <ul class="navbar-nav" id="navbar-id">
                        <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "on-page" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Degrees" ? "on-page" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Degrees">Degrees/Minors</a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "Employment" ? "on-page" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Employment">Employment</a>
                        </li>
                        <li class="nav-item @(ViewContext.RouteData.Values["action"].ToString() == "People" ? "on-page" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="People">People</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @* <div class="container"> *@
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    @* </div> *@

     <footer> 
         <div class="container" id="footer-container"> 
         </div> 
     </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- loaded the jquery UI -->
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
